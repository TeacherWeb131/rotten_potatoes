    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rating.id }}</td>
            </tr>
            <tr>
                <th>Notation</th>
                <td>{{ rating.notation }}</td>
            </tr>
            <tr>
                <th>Comment</th>
