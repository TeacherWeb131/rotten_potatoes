{% extends 'base.html.twig' %}

{% block title %}Movie index{% endblock %}

{% block body %}
    <h1>Liste des films</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Poster</th>
                <th>Réalisé le</th>
                <th>Synopsis</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for movie in movies %}
            <tr>
                <td>{{ movie.id }}</td>
                <td>{{ movie.title }}</td>
                <td>{{ movie.slug }}</td>
                <td>{{ movie.poster }}</td>
                <td>{{ movie.releasedAt ? movie.releasedAt|date('Y-m-d') }}</td>
                <td>{{ movie.synopsis }}</td>
                <td>
                    <a class="btn btn-success btn-sm" href="{{ path('admin_movie_show', {'id': movie.id}) }}">Voir</a>
                    <a class="btn btn-primary btn-sm" href="{{ path('admin_movie_edit', {'id': movie.id}) }}">Editer</a>
                    <a class="btn btn-danger btn-sm" href="{{ path('admin_movie_delete', {'id': movie.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary btn-sm" href="{{ path('admin_movie_new') }}">Créer un film</a>
{% endblock %}
