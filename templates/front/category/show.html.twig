{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Categorie {{ category.title }}</h1>
    <div class="row">
        {% for movie in category.movies %}
        <div class="col-lg-4">
            <div class="card mb-3">
                <h3 class="card-header">{{ movie.title }}</h3>
                <img alt="Card image" src="{{ movie.poster }}" style="height: 200px; width: 100%; display: block;">
                <div class="card-body">
                    <p class="card-text">Sinopsis : {{ movie.synopsis }}</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">ReleasedAt :
                        {{ movie.releasedAt | date("m/d/Y") }}
                    </li>
                    <li class="list-group-item">
                        Note (rating) :
                        <span class="badge badge-pill badge-warning">{{ movie.moyenne  | number_format(1, ","," ") }}</span>
                    </li>
                </ul>
                <div class="card-body">
                    <a class="btn btn-primary btn-sm" href="{{ path('movie_show', {'slug': movie.slug}) }}">Voir</a>
                </div>
            </div>
        </div>{# col #}
        {% endfor %}
    </div>{# row #}
    <a class="btn btn-success btn-sm mb-5" href="{{ path('home') }}">Retour aux cat√©gories</a>
{% endblock %}
